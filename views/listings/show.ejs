<% layout("/layouts/boilerplate") %>
<div class="row">
   
    <div class="col-9 offset-2 mt-3">
        <h3><%= listing.title %></h3>
        <div class="card col-9 listing-card" >
            <img src="<%= listing.image.url%>" class="card-img-top show-img " alt="listing image">
            <div class="card-body">
                    <p>
                    <p><%= listing.description %></p>
                    <p>&#8377;<%= listing.price.toLocaleString("en-IN") %></p>
                    <p><%= listing.location %></p>
                    <p><%= listing.country%></p>
                </p>
        
        
            </div>
          </div>
          <div class="btn-div">
            <a href="/listings/<%= listing._id %>/edit"><button class="btn btn-custom mb-3">Edit</button></a> 
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
             <button class="btn btn-dark mb-3 delete-btn">Delete</button>
              </form>
          </div>
          
          
        
    </div>
    <div class="col-9 offset-2 mb-3">
        <hr>
            <h4>Leave a Commnent</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" id="comment" cols="25" rows="5" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                    Please enter some review for feedback
                </div>
                </div>
        
                <button class="btn btn-outline-dark">Submit</button>
            </form>
          </div>
          <div class="col-9 offset-2 mb-3">

<hr>
                <div class="row">
                    <h5>All Reviews</h5>
                    <% for(review of listing.reviews){ %>
                    <div class="card mt-3 ms-2 col-5">

                    <div class="card-body">
                        <h5 class="card-title">Jane Doe</h5>
                        <p class="card-text"><%= review.comment %></p>
                        <p class="card-text"><%= review.rating %> star</p>
                        <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3" method="POST">
                            <button class="btn btn-dark">Delete</button>
                        </form>
                    </div>

                </div>
                 <% } %>

                </div>
               
          

        

          </div>
          
</div>


